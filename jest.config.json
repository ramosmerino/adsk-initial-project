{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "preset": "ts-jest",
    "transform": {
        "^.+\\.(t)s$": "ts-jest"
    },
    "moduleNameMapper": {
        "@app/(.*)": "<rootDir>/$1"
    },
    "coverageDirectory": "../coverage",
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageThreshold": {
        "global": {
            "statements": 40,
            "branches": 40,
            "functions": 40,
            "lines": 40
        }
    },
    "setupFiles": []
}